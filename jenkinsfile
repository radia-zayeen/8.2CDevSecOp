pipeline {
    agent any

    environment {
        RECIPIENT_EMAIL = 'radia.zayeen@gmail.com'
    }

    stages {
        stage('Dummy') {
            steps {
                echo 'Just a dummy step'
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Build Result: ${currentBuild.result ?: 'SUCCESS'}",
                body: "This is a test email from Jenkins pipeline.",
                to: "${env.RECIPIENT_EMAIL}",
                mimeType: 'text/plain',
                replyTo: 'radia.zayeen@gmail.com'
                // No attachments
            )
        }
    }
}
