pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/radia-zayeen/8.2CDevSecOp.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'npm test'
                        currentBuild.result = 'SUCCESS'
                    } catch (err) {
                        currentBuild.result = 'FAILURE'
                        throw err
                    }
                }
            }
            post {
                always {
                    emailext (
                        subject: "Test Stage: ${currentBuild.currentResult}",
                        body: "Build result: ${currentBuild.currentResult}\n\nCheck logs attached.",
                        to: 'radia.zayeen@gmail.com',
                        attachmentsPattern: '**/console.log',
                        attachLog: true
                    )
                }
            }
        }

        stage('NPM Audit (Security Scan)') {
            steps {
                script {
                    try {
                        sh 'npm audit'
                        currentBuild.result = 'SUCCESS'
                    } catch (err) {
                        currentBuild.result = 'FAILURE'
                        throw err
                    }
                }
            }
            post {
                always {
                    emailext (
                        subject: "Security Scan: ${currentBuild.currentResult}",
                        body: "Security scan result: ${currentBuild.currentResult}",
                        to: 'radia.zayeen@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
    }
}
