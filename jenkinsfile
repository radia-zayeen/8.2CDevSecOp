pipeline {
    agent any
    environment {
        RECIPIENT_EMAIL = 'radia.zayeen@gmail.com'
    }
    stages {
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    sh 'npm test || true'
                }
            }
            post {
                always {
                    emailext(
                        subject: "Test Stage - ${currentBuild.result ?: 'SUCCESS'}",
                        body: "Test stage completed successfully.",
                        to: "${env.RECIPIENT_EMAIL}"
                    )
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
